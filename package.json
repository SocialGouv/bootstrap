{
  "private": true,
  "description": "The Social Gouv Bootstrap monorepo",
  "scripts": {
    "serve": "lerna run serve --parallel",
    "build": "lerna run build",
    "lint": "lerna run lint --parallel",
    "test": "lerna run test --parallel",
    "docs-build": "hugo --config ./hugo.yml",
    "docs-serve": "hugo --config ./hugo.yml --debug server  --port 9001 --disableFastRender"
  },
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "devDependencies": {
    "hugo-bin": "^0.43.6",
    "lerna": "^3.13.1"
  }
}
